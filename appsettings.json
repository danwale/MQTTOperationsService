{
  "Logging": {
    "EventLog": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "MQTT": 
  {
    "Broker": {
      "Hostname": "localhost",
      "Port": 8883
    },
    "CAFile": ".\\ca-file.pem",
    "ClientCert": ".\\client-cert.pfx",
    "ClientID": "DiscoveryServiceTestClient",
    "ReconnectDelayMs": 2000
  },
  "Operations": [
    {
      "Name": "DiscoverServer",
      "Parameters": [
        {
          "Name": "ServerName"
        }
      ],
      "Topics": {
        "Trigger": "Operations/API/Discovery/Server/Trigger",
        "Response": "Operations/API/Discovery/Server/Response"
      },
      "Command": ".\\server-discovery.ps1",
      "CaptureOutput": true
    }
  ]
}
